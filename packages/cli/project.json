{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/cli",
        "main": "packages/cli/src/cli.ts",
        "tsConfig": "packages/cli/tsconfig.lib.json",
        "assets": ["packages/cli/*.md"]
      }
    },
    "node": {
      "executor": "@nrwl/js:node",
      "dependsOn": ["build"],
      "defaultConfiguration": "build",
      "options": {
        "buildTarget": "cli:build",
        "watch": false
      },
      "configurations": {
        "help": {
          "args": ["--help"]
        },
        "version": {
          "args": ["--version"]
        },
        "build": {
          "args": ["build"]
        },
        "clean": {
          "args": ["clean"]
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish dist/packages/cli"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/cli/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/cli/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
